@model TrashCollector.Models.Schedule
@{
    ViewData["Title"] = "Schedule";
}

<h1>Your Pickup Schedule</h1>

<p>
    <a asp-action="Index">Home Page</a> |
    <a asp-action="SchedulePickup">Schedule Pickup</a> |
    <a asp-action="ChangePickup">Change Pickup Day</a> |
    <a asp-action="Hold">Schedule a Hold</a>
    
</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DayName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DayName)
        </dd>
        <dt class="col-sm-2">
            Next PickUp
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.date)
        </dd>
        
    </dl>
</div>
