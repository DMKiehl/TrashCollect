@model TrashCollector.Models.Schedule

@{
    ViewData["Title"] = "SchedulePickUp";
}

<h1>Schedule Your Pick Up</h1>

<p>
    <a asp-action="Index">Home Page</a>
</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SchedulePickUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                <input asp-for="date" class="form-control" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="PickedUp" />

            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="CustomerAddress" />


            <input type="hidden" asp-for="CustomerZipCode" />
            <input type="hidden" asp-for="DayId" />
            <div class="form-group">
                <label asp-for="DayName" class="control-label"></label>
                <input asp-for="DayName" class="form-control" />
                <span asp-validation-for="DayName" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="DayName" class="control-label"></label>
                <select asp-for="DayName" class="form-control" asp-items="ViewBag.DayName"></select>
            </div>*@
            <br />
            <div class="form-group">
                <input type="submit" value="Schedule" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



