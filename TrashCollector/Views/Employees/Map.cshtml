@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "Map";
}
    <head>
        <style>
            #map {
                height: 500px;
                width: 500px;
            }
        </style>
       
        

    </head>
    <body>
        <h1>Map</h1>
        <p>
            <a asp-action="Index">Home Page</a>
        </p>


        <br />
        <div id="map"></div>
        <script>
            var map;
            function initMap() {
                //var myAddress = new google.maps.LatLng(30, 50);
                map = new google.maps.Map(document.getElementById('map'), {
                    //center: myAddress,
                    center: { lat: @Model.latitude, lng: @Model.longitude },
                    zoom: 15
                });

                marker = new google.maps.Marker({
                    //position: myAddress,
                    position: { lat: @Model.latitude, lng: @Model.longitude },
                    map: map
                });
                marker.setMap(map);
            }
        </script>



        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDa7YADatqC-ikFP7JAmoeQntbDy4Qm93Q&callback=initMap" async defer></script>
    </body>


  
       


